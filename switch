import java.util.Scanner;

public class Main{
public static void main(String[]args){
Scanner obj=new Scanner(System.in);
System.out.println("enter a number");
int n=obj.nextInt();
switch (n){
    case 1: System.out.println("hey you entered one");
    break;
    case 2:System.out.println("hey you enetered two");
    break;
    case 3:System.out.println("hey you enetered three");
    break;
    default:System.out.println("bad input");
}
  }
}
